{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2019",
		"lib": ["esnext", "dom", "dom.iterable"],
		"strict": true,
		"declaration": true,
		"composite": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
	}
}